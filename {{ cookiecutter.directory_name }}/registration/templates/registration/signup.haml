- extends "registration/form_base.haml"
- load i18n
- load bootstrap3

- block heading
  - trans "Register"

- block form
  - bootstrap_form form
  - buttons
    %button.btn.btn-success{type: "submit"}
      - trans "Signup"
      %i.fa.fa-certificate
    %a.btn.btn-primary{href: "{% url 'login' %}"}
      - trans "Login"
      %i.fa.fa-sign-in
  - endbuttons
